<div class="signup">
<div class="container">
  <h1>Create your account!</h1>
  <%= @error %>
   <form class="form-inline" action="/signup" method="post">
    <input class="form-control" name="user[email]" placeholder="Email" />
    <input class="form-control" name="user[first_name]" placeholder="First Name" />
    <input class="form-control" name="user[last_name]" placeholder="Last Name" />
    <input class="form-control" type="password" name="user[password_hash]" placeholder="Password" />
    <input class="form-control" type="password" name="password_hash_verify" placeholder="Verify Password" />
    <input class="btn btn-info" type="submit" value="Sign up" />
  </form>
</div>
</div>
