
<div class="signinpage">
  <div class="container">
<img class="home_image" src="http://i.imgur.com/qjLzF0u.png">
    <%= @error %>
    <div class="signinform">

      <h2>Sign in</h2>
      <form class="form" action="/signin" method="post">
        <input class="form-control" type="text" name="email" placeholder="Email" /> <br>
        <input class="form-control" type="password" name="password_hash" placeholder="Password" /> <br>
        <input class="btn btn-info" type="submit" value="Sign In" />
      </form>

      <h4>New here? Sign Up below!</h4>

      <form action="/signup"><input class="btn btn-info" type="submit" value="Sign Up!" /></form>
    </div>

  </div>
</div>
