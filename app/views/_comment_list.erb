<% if @comments.any? %>
<% @comments.each do |comment| %>
  <ul>
    <li>
        <%= User.find_by(id: comment.user_id).first_name %>
        <%= User.find_by(id: comment.user_id).last_name %> :
        <%= comment.body %>
    </li>
  </ul>
<% end %>
<% else %>
<p> Nobody has commented on this spot - leave a comment!</p>
<% end %>
